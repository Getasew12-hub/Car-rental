{
  "version": 2,
  "public": true,
  "builds": [
    {
      "src": "backend/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "outputDirectory": "dist"
      }
    }
  ],
  "rewrites": [
    {
    
      "source": "/api/(.*)",
      "destination": "/backend/server.js"
    },
    {
  
      "source": "/static/(.*)",
      "destination": "/frontend/dist/static/$1"
    },
    {
     
      "source": "/(.*)",
      "destination": "/frontend/dist/index.html"
    }
  ]
}