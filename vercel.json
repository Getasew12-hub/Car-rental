


{
  "version": 2,
  "rewrites": [
   
    {
      "source": "/api/(.*)",
      "destination": "/backend/server.js"
    },
    
    {
      "source": "/static/(.*)",
      "destination": "/frontend/dist/static/$1"
    },
   
    {
      "source": "/(.*)",
      "destination": "/frontend/dist/index.html"
    }
  ],
  "builds": [
   
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ]
}